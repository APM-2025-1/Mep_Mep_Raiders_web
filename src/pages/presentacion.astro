---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Presentación - Mep Mep Raiders" description="Descubre las características innovadoras de nuestras patinetas eléctricas, con efectos visuales interactivos y animaciones avanzadas. Explora la tecnología detrás de nuestros productos y cómo transforman tu experiencia de movilidad.">
  <Header />
  <main>
    <HeroSection 
      title="Presentación de Mep Mep Raiders" 
      highlightText="Presentación"
      description="Conoce los detalles de nuestro proyecto y la manufactura de nuestras patinetas eléctricas. Explora las innovaciones que hacen de Mep Mep Raiders una experiencia única."
    />

    <section class="section relative z-10 overflow-hidden py-12 md:py-16">
      <div class="container-custom">

        <div class="text-center max-w-3xl mx-auto mb-8 md:mb-16 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            Sustentación Intermedia
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 md:mb-6 text-gray-900 dark:text-white">Primera presentación</h2>
          <p class="text-gray-600 dark:text-gray-300">
            Avances del proyecto.
          </p>
        </div>

        <div class="rounded-lg overflow-hidden shadow-lg">
          <iframe 
            src="https://www.canva.com/design/DAGpzb5owJA/pxF0DWwptedkj9mLi_SAkg/view?utm_content=DAGpzb5owJA&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h7e39243c79" 
            style="width:100%; height:600px; border:none;" 
            allowfullscreen 
            loading="lazy"
            title="Presentación Canva">
          </iframe>
        </div>
      </div>
    </section>

